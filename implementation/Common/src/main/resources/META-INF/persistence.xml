<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">
    <persistence-unit name="azure">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        <properties>
            <property name="hibernate.connection.driver_class" value="com.microsoft.sqlserver.jdbc.SQLServerDriver"/>
            <!--GET THIS STRING FROM AZURE!-->
            <!--<property name="hibernate.connection.url" value="jdbc:sqlserver://nbcr8qx7x8.database.windows.net:1433;database=;user=;password=;encrypt=true;hostNameInCertificate=*.database.windows.net;loginTimeout=30;"/>-->
            <property name="hibernate.dialect" value="org.hibernate.dialect.SQLServerDialect"/>
            <property name="hibernate.hbm2ddl.auto" value="create"/>
            <!--<property name="hibernate.hbm2ddl.auto" value="update"/>-->
        </properties>

    </persistence-unit>
</persistence>